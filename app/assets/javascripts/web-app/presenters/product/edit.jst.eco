<div class="product big-padding">
  <div class="responsive_title"><%= @title %></div>

  <form class="form-horizontal form-group">
    <input class="full-width" name="description" type="text" data-model-value="model.description" placeholder="Descrição"><br/>
    <label for="price"> Preço </label>
    <input class="full-width" id="price-field" name="price" type="integer" data-model-value="model.price_cents" placeholder="Preço"><br/>
  </form>

</div>
